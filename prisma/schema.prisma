model WatchingList {
  id          Int      @id @default(autoincrement())
  omdbId      String
  imdbId      String
  userId      String
  name        String
  releaseDate String
  runtime     Int
  voteAverage Float
  genres      String[]
  description String
  imageUrl    String
  posterUrl   String
  createdAt   DateTime @default(now())
}

model FavouriteMovies {
  id          Int      @id @default(autoincrement())
  omdbId      String
  imdbId      String
  userId      String
  name        String
  releaseDate String
  runtime     Int
  voteAverage Float
  genres      String[]
  description String
  imageUrl    String
  createdAt   DateTime @default(now())
}
